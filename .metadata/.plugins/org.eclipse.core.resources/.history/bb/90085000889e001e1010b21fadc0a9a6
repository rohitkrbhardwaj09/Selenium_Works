package Assignments;

public class PalindromeNumber_day5 {

	public static void main(String[] args) {
		
		int number = 12321;
		
		int reversed = 0;
		
		while(number != 0) {
			int digit = number % 10;
			reversed = (reversed * 10) + digit;
			number = number/10;
		}

		if(number == reversed) {
			System.out.println(reversed+ " is a Palindrome number");
		}else {
			System.out.println(reversed+" is not a Palindrome number");
		}
	}

}
