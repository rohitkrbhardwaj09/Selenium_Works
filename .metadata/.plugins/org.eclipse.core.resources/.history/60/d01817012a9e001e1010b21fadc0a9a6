package day3;

public class OperatorDemo {

	public static void main(String[] args) {
		
		//Arithmetic Operator
		int a=200, b=100;
		
		//Addition
		System.out.println("Sum of A and B is: "+ (a+b));
		
		//Subtraction
		System.out.println("Subtraction of A and B is: "+ (a-b));
		
		//Multiplication
		System.out.println("Multiplication of A and B is: "+ (a*b));
		
		//Division
		System.out.println("Division of A and B: "+ (a/b));
		
		//Modules
		System.out.println("Modules of A and B: "+ (a%b));
	
		
		// Relational/ Comparison Operator
		//It returns true and false only
		
		// > (Greater than)
		System.out.println(a>b); //true
		
		// < (Lesser than)
		System.out.println(a<b); //false
		
		// >= (Greater than or equals to)
		System.out.println(a>=b); //true
		
		// <= (Lesser than or equals to)
		System.out.println(a<=b); //false
		
		// != (not equals to)
		System.out.println(a!=b); //true
		
		// == (equals to)
		System.out.println(a==b); //false
		
		//3) Logical Operator && || !
		//Works between 2 or more values
		//It also returns only True and False
		boolean x = true;
		boolean y = false;
		
		// && (AND)
		System.out.println(x && y); //false
		
		// || (OR)
		System.out.println(x || y); //true
		
		// ! (NOT)
		System.out.println(!x); //false
		
		
		boolean b1 = 10 > 20;
		boolean b2 = 20 > 10;
		
		System.out.println(b1 && b2);
		System.out.println(b1 || b2);

		//Increment Operator or Decrement Operator
		//++ (Increment Operator) ----> Pre, Post
		
		//pre
		a = ++a;
		System.out.println(a); //201
		
		//post
		b = b++;
		System.out.println(b); //100
		
		//-- (Decrement Operator) -----> Pre, Post
		
		//pre
		a = --a;
		System.out.println(a); //200
		
		//post
		b = b--;
		System.out.println(b); //100
		
		//Assignment Operators
		
		//Increment more values
		a += 50;
		System.out.println(a); //250
		
		//Decrement more values
		b -= 50;
		System.out.println(b); //50
		
		// *=
		
		b *= 5;
		System.out.println(b); //250
		
		// /=
		a /= 5;
		System.out.println(a); //50
		
		// %=
		a %= 4;
		System.out.println(a); //2
		
		// Ternary Operator
		//var = exp ? result1 : result2
		int m = a > b ? a : b;
		
		System.out.println(m);
		

		//Example
		int age = 20;
		String result = (age>18) ? "Eligible for vote" : "Note eligible for vote" ;
	}

}
